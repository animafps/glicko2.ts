{
    "name": "glicko2.ts",
    "description": "Implementation of the Glicko2 ranking system in Typescript",
    "keywords": [
        "glicko",
        "utilities",
        "ranking",
        "glicko2"
    ],
    "version": "1.1.0",
    "license": "GPL-3.0-or-later",
    "main": "dist/glicko2.js",
    "types": "dist/glicko2.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/animafps/glicko2.ts.git"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.1",
        "@types/jest": "^27.0.2",
        "@types/node": "^16.9.6",
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.32.0",
        "jest": "^27.2.1",
        "prettier": "^2.4.1",
        "semantic-release": "^17.4.7",
        "ts-jest": "^27.0.5",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.3"
    },
    "scripts": {
        "prepare": "tsc",
        "lint": "eslint glicko2.ts",
        "lint:fix": "eslint glicko2.ts --fix",
        "prettier": "prettier -c glicko2.ts",
        "test": "jest",
        "test:coverage": "jest --collectCoverage",
        "release": "semantic-release",
        "build": "tsc"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "release": {
        "branches": [
            "main"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/changelog",
                {
                    "changelogFile": "changelog.md"
                }
            ],
            "@semantic-release/npm",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "changelog.md",
                        "package.json"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ],
            "@semantic-release/github"
        ]
    },
    "packageManager": "yarn@3.0.2"
}
